extends ../../../../../views/layout
block append headcss
    link(type='text/css',href='./Maintain/web/css/FaultTime.css',rel='stylesheet')
block append headjavascript
    script(type='text/javascript',src='./javascripts/UI/Scripts/Highcharts-4.0.3/js/highcharts.js')
    script(type='text/javascript',src='./javascripts/UI/Scripts/Highcharts-4.0.3/js/highcharts-3d.js')
    script(type='text/javascript',src='./javascripts/UI/Scripts/BandexHighCharts.js')  
    script(type='text/javascript',src='./Maintain/web/controller/faultTime.js')
block content
    .row-fluid
        .span12
            h3.page-title(data-lang='AccountManage')
                | 故障时间
            ul.breadcrumb
                li
                    i.icon-home
                    a(href='/') 主页 
                    i.icon-angle-right
                li
                    a(href='javascript:;', data-lang='System') Tpm图表分析
                    i.icon-angle-right
                li
                    a(href='javascript:;', data-lang='MachineScheduling') 故障时间
    form.form-horizontal(style='padding: 5px 2px 0px; border: 1px solid rgb(238, 238, 238);')
        .row-fluid
            .span
                .control-group(style='margin-bottom: 5px;')
                    label.control-label(data-lang='Common.PASSWORD') 起始时间
                    .BZcontrols
                        input#startTime.m-wrap(type='text', style='width:200px;', name='startTime')
            .span
                .control-group(style='margin-bottom: 5px;')
                    label.control-label(data-lang='Common.PASSWORD') 结束时间
                    .BZcontrols
                        input#endTime.m-wrap(type='text', style='width:200px;', name='endTime')
            .span
                .control-group(style='margin-bottom: 5px;')
                    label.control-label(data-lang='Common.PASSWORD') 查询类型
                    .BZcontrols(style='line-height: 32px; width:300px;')
                        label.radio(style='margin-top: 0px !important;font-size: 12px;')
                            input(type='radio', name='searchType', checked='', value='1')
                            | 故障时间
                        label.radio(style='margin-top: 0px !important;font-size: 12px;')
                            input(type='radio', name='searchType', value='2')
                            | 维修时间
        .row-fluid
            .span(style='width: 300px !important;')
                .control-group(style='margin-bottom: 5px;')
                    label.control-label 设备
                    .BZcontrols
                        div
                            input#MAC_NBR.m-wrap(type='text', name='MAC_NBR', style='width:200px;')
            .span
                .control-group(style='margin-bottom: 5px;')
                    label.control-label(style='width:50px;margin-left:70px;', data-lang='Common.PASSWORD') 基准线
                    .BZcontrols
                        input#LINE.m-wrap(type='text', style='width:186px;', name='LINE')
            .span
                .control-group(style='margin-bottom: 5px;')
                    #search.btn.green(style='margin-left: 50px;')
                        | 查询
                        i.icon-search
    #hisChart(style='min-width:700px;height:500px;')
    #pie(style='min-width: 700px; display: none; margin-top: 5px;')
