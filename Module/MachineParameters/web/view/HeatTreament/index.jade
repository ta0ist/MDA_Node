extends ../../../../../views/layout
block append headcss
    link(type='text/css',href='./MachineParameters/web/css/HeatTreament.css',rel='stylesheet')
    link(type='text/css',href='./MachineParameters/web/css/jcallout.css',rel='stylesheet')
    style.
        .T_title{
            font-size:20px;
            color:blue;
        }
block append headjavascript
    script(type='text/javascript',src='./javascripts/UI/Scripts/Angular/angular.min.js')
    script(type='text/javascript',src='./javascripts/UI/Scripts/Highcharts-4.0.3/js/highcharts.js')
    script(type='text/javascript',src='./javascripts/UI/Scripts/underscore-min.js')
    script(type='text/javascript',src='./MachineParameters/web/js/T_line.js')
    script(type='text/javascript',src='./MachineParameters/web/controller/heatTreamentController.js')
block content
    .row-fluid
        .span12
            h3.page-title(data-lang='AccountManage')
                | 热处理炉
            ul.breadcrumb
                li
                    i.icon-home
                    a(href='/') 首页
                    i.icon-angle-right
                li
                    a(href='javascript:;', data-lang='System') 过程参数
                    i.icon-angle-right
                li
                    a(href='javascript:;', data-lang='AccountManage') 热处理炉
    .row-fluid(ng-controller='HeatTreamentCtrl')
        #wrap
            #sidebar
                div
                    ul
                        li(ng-repeat='macName in machinesItem' ng-click="dianji(($index))" ng-class='{focus: $index==focus}')
                            i.icon-cogs
                            |  {{macName.GP_NAME}}
            #content
                .head
                    table.table
                        tr
                            td.T_title 工作令
                            td
                                input.input(type='text' ng-model='work_order.WORK_ORDER')
                            td.T_title 热处理批号
                            td
                                input.input(type='text' ng-model='work_order.BATCH')
                        tr
                            td.T_title 材料
                            td 
                                input.input(type='text' ng-model='work_order.MATERIAL')
                            td.T_title 数量
                            td
                                input.input(type='number' ng-model='work_order.YEILD')
                    button.btn.green.save(style='margin-left:100px;margin-top:-10px;' ng-click="saveInfo()")
                            | 保存
                            i.icon-ok
                    button.btn.purple.print(style=' margin-top:-10px; ' ng-click="print()")
                            | 打印
                            i.icon-edit
                #grid_one.content_grid(ng-repeat='area in AreaList')
                    span(style='font-size:22px;font-weight:bold;color:red') {{area.Mac_Name}}
                    .grid_content
                        .left
                            table(style="margin-left: 20px;")
                                tr
                                    td PV值 
                                    td.td
                                        input.PV_VALUE(type='number', name='name', ng-model='area.machineitems[1].Value')
                                        button.btn.green(ng-click='SetPV($index)')
                                            | 设置PV
                                tr
                                    td SV值 
                                    td.td
                                        input.SV_VALUE(type='number', name='name', ng-model='area.machineitems[0].Value')
                                        button.btn.green(ng-click='SetSV($index)')
                                            | 设置SV
