extends ../../../../../views/layout

append headcss
  style(type='text/css').
    #allcheck_PlanNo {
      margin-top: 0px;
    }
    #allcheck_Shift {
      margin-top: 0px;
    }

append headjavascript
  script(type='text/javascript',src='./Report/web/controller/reportController.js')



block content
    #path(hidden) #{report}
    .row-fluid
      .span12
        h3.page-title()
          | #{lang.Report.ReportDerived}
        ul.breadcrumb
          li
            i.icon-home
            a(href='/') #{lang.EmployeePerformance.Home}
            i.icon-angle-right
          li
            a(href='javascript:;') #{lang.Report.Report}
            i.icon-angle-right
          li
            a(href='javascript:;') #{lang.Report.ReportDerived}

    .row-fluid(ng-controller='reportctrl')
      table(width='100%', cellpadding='0', cellspacing='0')
        tr
          td(style='width: 240px;')
            table.table.table-bordered.table-condensed(style='border-color:#C5C5C5;', cellpadding='0', cellspacing='0', border='0', width='100%', height='100%')
              tr
                td.k-header(style='border-color: rgb(197, 197, 197); padding: 6px 7px 5px;')
                  a.k-link(tabindex='-1', href='#') #{lang.Report.ReportList}
              tr
                td(style='border-color: rgb(197, 197, 197); height: 468px; padding: 0px;')
                  div(style='height: 500px; overflow-y: auto; padding-top :5px; padding-left: 4px; padding-bottom: 5px;')
                    #orgnizetree
          td(valign='top', style='padding-left:5px;')
            table.table.table-bordered.table-condensed(style='border-color:#C5C5C5;', cellpadding='0', cellspacing='0', border='0', width='100%', height='100%')
              tr
                td.k-header(style='border-color: rgb(197, 197, 197); padding: 6px 7px 5px;')
                  a.k-link(tabindex='-1', href='#') #{lang.Report.ReportQuery}
              tr
                td(style='border-color: rgb(197, 197, 197); height: 510px; padding: 0px;')
                  form#searchPars.form-horizontal(style='min-width: 298px;padding-left:20px;')
    //----------------------------模板  
    script#treeview-template(type='text/kendo-ui-template').
      <i class="#:item.icon#"></i>
      <span attr="treenode">#:item.text#</span>
    script(type='text/javascript').
       var config = !{JSON.stringify(config)};
