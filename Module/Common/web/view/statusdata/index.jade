extends ../../../../../views/layout

append headcss
    link(href='./javascripts/UI/Scripts/media/css/colorpicker.css', rel='stylesheet')
    style(type='text/css').
        .colorpicker.dropdown-menu {
        z-index: 999999;
        }
        .table-attr td {
        padding: 1px;
        }

append headjavascript
    script(src='./javascripts/UI/Scripts/media/js/bootstrap-colorpicker.js')
    script(src='./javascripts/UI/Scripts/Raphael-2.1.2.js', type='text/javascript')
    script(type='text/javascript',src='./Common/web/controller/statusController.js')


block content
    .row-fluid
        .span12
            h3.page-title(data-lang='AccountManage')
              | #{lang.Common.StateData}
            ul.breadcrumb
                li
                    i.icon-home
                    a(href='/') #{lang.EmployeePerformance.Home}
                    i.icon-angle-right
                li
                    a(href='javascript:;', data-lang='System') #{lang.MachineParameters.System}
                    i.icon-angle-right
                li
                    a(href='javascript:;', data-lang='MachineScheduling') #{lang.Common.StateData}
    .row-fluid(ng-controller='statusctrl')
        table(width='100%', cellpadding='0', cellspacing='0')
            tr
                td
                    table.table.table-bordered.table-condensed(style='border-color:#C5C5C5;', cellpadding='0', cellspacing='0', border='0', width='100%', height='100%')
                        tr
                            td.k-header(style='border-color: rgb(197, 197, 197); padding: 6px 7px 5px;')
                                a.k-link(tabindex='-1', href='#', data-lang='Common.USER_NAME') #{lang.EmployeePerformance.State}
                        tr
                            td(style='border-color: rgb(197, 197, 197); height: 464px; padding: 0px;')
                                div(style='height:462px;overflow-y:auto;overflow-x:auto;')
                                    #StatusMap
                td(valign='top', style='padding-left:5px;width: 240px;')
                    #resize
                        table.table.table-bordered.table-condensed.gridtreehead(style='border-color: #C5C5C5; margin-bottom: 0px;', cellpadding='0', cellspacing='0', border='0', width='100%', height='100%')
                            tr
                                td#machinePlan.k-header(style='border-color: rgb(197, 197, 197); padding: 6px 7px 5px;') #{lang.Common.Attribute}
                            tr
                                td(style='border-color: rgb(197, 197, 197); padding: 0px;', colspan='3')
                                    div(style='height: 464px; overflow-y: auto; padding: 1px;')
                                        table.table.table-bordered.table-attr(style='margin-bottom: 0px;')
                                            tr
                                                td(width='80', style='vertical-align: middle; text-align: right;') #{lang.Common.No}：
                                                td
                                                    input#STATUS_NBR.span6.m-wrap.statusattr(disabled='', type='text', style='margin-bottom: 0px; width: 150px;')
                                            tr
                                                td(style='vertical-align: middle; text-align: right;') #{lang.Common.NameS}:
                                                td
                                                    input#NAME.span6.m-wrap.statusattr(type='text', style='margin-bottom: 0px; width: 150px;')
                                            tr
                                                td(style='vertical-align: middle; text-align: right;') #{lang.Common.Color}:
                                                td
                                                    input#COLOR16.span6.m-wrap.statusattr(type='text', value='#ffffff', style='margin-bottom: 0px; width: 150px;')
                                            tr
                                                td(style='vertical-align: middle; text-align: right;') #{lang.Common.Rating}:
                                                td
                                                    input#LEVEL.span6.m-wrap.statusattr(disabled='', type='text', style='margin-bottom: 0px; width: 150px;')
                                            tr
                                                td(style='vertical-align: middle; text-align: right;') #{lang.Common.Type}:
                                                td
                                                    input#PLANED.span6.m-wrap.statusattr(type='text', style='margin-bottom: 0px; width: 150px;')

    //模板---------添加状态
    script#popup-add(type='text/x-kendo-template').
        <form class="form-horizontal" id="viewmodel">
        <div class="control-group">
        <label class="control-label" data-lang="Common.USER_NAME"><span class="required">*</span>#{lang.Common.No}</label>
        <div class="controls">
        <input type="text" id="add_ID" name="add_ID" data-required="1" class="span6 m-wrap" />
        </div>
        </div>
        <div class="control-group">
        <label class="control-label" data-lang="Common.PASSWORD"><span class="required">*</span>#{lang.Common.NameS}</label>
        <div class="controls">
        <input type="text" id="add_Name" name="add_Name" data-required="1" class="span6 m-wrap" />
        </div>
        </div>
        <div class="control-group">
        <label class="control-label" data-lang="Common.PASSWORD">#{lang.Common.Color}</label>
        <div class="controls">
        <input type="text" class="colorpicker-default m-wrap" value="\\#8fff00" />
        </div>
        </div>
        <div class="control-group">
        <label class="control-label" data-lang="Common.PASSWORD">#{lang.Common.Rating}</label>
        <div class="controls"id="downMemu" style="line-height: 32px;">
        <label class="radio" style="margin-top: 0px !important;font-size: 12px;"><input type="radio" name="Expected" checked value="true" />#{lang.Common.InThePlan}</label>
        <label class="radio" style="margin-top: 0px !important;font-size: 12px;"><input type="radio" name="Expected" value="false" />#{lang.Common.Unplanned}</label>
        <label class="radio" style="margin-top: 0px !important;font-size: 12px;"><input type="radio" name="Expected" value="false" />#{lang.Common.Without}</label>
        </div>
        </div>
        <div class="form-actions">
        <div id="Win_Ok" class="btn green">#{lang.EmployeePerformance.OK}<i class="icon-ok"></i></div>
        <button id="Win_Cancel" class="btn">#{lang.EmployeePerformance.Cancel}<i class="icon-remove"></i></button>
        </div>
        </form>
                                                   