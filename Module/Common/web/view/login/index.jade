  style(type='text/css').
    body {
    font-family: Helvetica Neue,Microsoft Yahei,Hiragino Sans GB,WenQuanYi Micro Hei,sans-serif;
    }
body.login(ng-app='login',ng-controller='loginctrl')
    .content(style='border-radius: 5px; padding: 0px; width: 500px;margin-top:10%;')
      form.form-vertical.login-form(style='position:relative;')
        h3.form-title.lang(style='padding-top: 10px; padding-bottom: 10px; padding-left: 10px; font-weight: bold; font-size: 16px; background-color: rgb(75, 141, 248); color: rgb(255, 255, 255);') #{lang.Common.Title}
        .btn-group(style='position: absolute;right: 15px;top: 14px;')
          a.btn.dropdown-toggle#lang(data-toggle="dropdown",href='#')
            span #{lang.language}
            i.icon-angle-down
          ul.dropdown-menu(style='min-width: 100px;')
            li
              a(href='/set_lang_cn' ) 简体中文
              i.icon-ok.lang-ok(style='display:none;')
            li
              a(href='/set_lang_en' ) English
              i.icon-ok.lang-ok(style='display:none;')
        .control-group(style='margin-left: 210px; width: 300px;')
          label.control-label.visible-ie8.visible-ie9 Username
          .controls
            .input-icon.left
              i.icon-user
              input.m-wrap.placeholder-no-fix(type='text', placeholder='Username', name='username', style='width: 200px;',ng-model='User.Name')
        .control-group(style='margin-left: 210px; width: 300px;')
          label.control-label.visible-ie8.visible-ie9 Password
          .controls
            .input-icon.left
              i.icon-lock
              input.m-wrap.placeholder-no-fix(type='password', placeholder='Password', name='password', style='width: 200px;',ng-model='User.Pwd')
        img(src='./images/bandexlogo.png', style='position: absolute; top: 86px; left: 12px;')
        .form-actions(style='margin: 0px; padding-bottom: 10px;')
          label.checkbox(style='margin-left: 200px;')
            input#chkremember(type='checkbox', name='remember')
            span.lang #{lang.Common.RemeberPwd}
          button#BtLogin.btn.green.pull-right(type='button', ng-click='login()')
            span.lang #{lang.Common.Login}
            i.m-icon-swapright.m-icon-white
        div(style='height: 25px; padding-left: 20px; color: #FF0000; width: 300px;')
          label#message(ng-bind='error', style='height: 20px; margin-bottom: 0px; margin-top: 5px;')
    .copyright(style='font-size:12px;width:300px;')
      | © 
      span.lang(data-lang='Common.Company') #{lang.Common.Company}
      br
      a(style='font-size:14px;cursor:pointer;color:rgb(0, 255, 255)') http://www.sh-lingxiu.com
    script(src='./javascripts/UI/Scripts/media/js/jquery-1.10.1.min.js', type='text/javascript')
    script(src='./javascripts/UI/Scripts/media/js/jquery-migrate-1.2.1.min.js', type='text/javascript')
    script(src='./javascripts/UI/Scripts/media/js/jquery-ui-1.10.1.custom.min.js', type='text/javascript')
    script(src='./javascripts/UI/Scripts/media/js/bootstrap.min.js', type='text/javascript')
    script(src='./javascripts/UI/Scripts/media/js/jquery.cookie.min.js', type='text/javascript')
