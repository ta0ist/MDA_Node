extends ../../../../../views/layout
block append headcss
    link(type='text/css',href='./Measure/web/css/MeasureManager.css',rel='stylesheet')
    link(type='text/css',href='./Measure/web/css/jcallout.css',rel='stylesheet')
    link(type='text/css',href='./javascripts/UI/Scripts/media/css/inbox.css',rel='stylesheet')
block append headjavascript
    script(type='text/javascript',src='./javascripts/UI/Scripts/Raphael-2.1.2.js')
    script(type='text/javascript',src='./javascripts/UI/Scripts/BandexHighCharts.js')
    script(type='text/javascript',src='./javascripts/UI/Scripts/jquery-barcode.js')
    script(type='text/javascript',src='./javascripts/UI/Scripts/moment.js')
    script(type='text/javascript',src='./Measure/web/controller/MeasureManagerController.js')
block content
    .row-fluid
        .span12
            h3.page-title(data-lang='MeasureManager')
                | #{lang.Measure.Measure}
            ul.breadcrumb
                li
                    i.icon-home
                    a(href='/') #{lang.EmployeePerformance.Home}
                    i.icon-angle-right
                li
                    a(href='javascript:;', data-lang='System') #{lang.Measure.Measure}
                    i.icon-angle-right
                li
                    a(href='javascript:;', data-lang='MeasureManager ') #{lang.Measure.MeasureManager}
    .toolbar
        .control-group(style='display:inline-block; height: 34px;')
            .controls(style='background-color: white;height:34px;')
                .input-icon.left(style='width: 250px; display: inline;')
                    i.icon-search
                    input#filter.m-wrap(type='text', placeholder='量具名称')
                .input-icon.left(style='width: 250px; display: inline;margin-left:30px;')
                    label.m-wrap(style='display:inline-block;') 类型
                    input#MEASURE_TYPE.m-wrap(name='MEASURE_TYPE', type='text', style='width: 190px; margin-left: 0px; ')
                .input-icon.left(style='width: 250px; display: inline;margin-left:30px;')
                    label.m-wrap(style='display:inline-block;') 状态
                    input#MEASURE_STATES.m-wrap(name='MEASURE_STATES', type='text', style='width: 170px; margin-left: 0px; ')
                button#output.btn.green(style='margin-left:50px;')
                    | 查询
                    i.icon-search
        button#error_a.btn.btn-sm.blue(style='display:inline-block')
            | 新增
            i.icon-plus-sign
        button#importHtml.btn.green(style='margin-left: 20px;')
            | 导出html
            i.icon-share-alt
    #grid
